{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES6",
        "outDir": "./dist", // 输出目录
        "rootDir": "./src", // 源文件目录
        "noImplicitAny": false, // 在表达式和声明上有隐含的'any'类型时报错, 最好之后改成true
        "sourceMap": true,
        "strict": true, // 启用所有严格类型检查选项
        "esModuleInterop": true, // 允许导入export default
        "skipLibCheck": true, // 跳过声明文件的类型检查,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*"]
        }
    },
    "include": [
        "src/**/*"
    ]
}
