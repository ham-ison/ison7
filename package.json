{
  "name": "ison7-app",
  "private": true,
  "version": "0.0.0",
  "description": "HAM ison7 APP",
  "author": "HAM <hamiosn@qq.com> ",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently \"vite\" \" && electron .\"",
    "build": "tsc && vite build",
    "start": "electron .",
    "electron": "npm run build && electron .",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "build": {
    "appId": "com.ison7.app",
    "productName": "ison7",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icon.png"
    }
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "electron": "^35.0.2",
    "electron-builder": "^25.1.8",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.0"
  }
}
