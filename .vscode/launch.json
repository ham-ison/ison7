{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "启动 Electron(开发模式)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "node",
      "args": [
        "--inspect=9222",
        "node_modules/electron/cli.js",
        "dist/main/main.js"
      ],
      "outputCapture": "std",
      "env": {
        "VITE_DEV_SERVER_URL": "http://localhost:5173"
      }
    },
    {
      "name": "调试主进程",
      "type": "node",
      "request": "attach",
      "port": 9222,
      "restart": true,
      "protocol": "inspector"
    },
    {
      "name": "调试渲染进程",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/src",
      "sourceMaps": true
    }
  ]
}
